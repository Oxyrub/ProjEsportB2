<Window x:Class="WpfApp1.addTeam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="addTeam" Height="150" Width="300">
    <Grid>
        <!--Définition colonne et ligne-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" FontSize="18">Ajout d'équipe</TextBlock>
        <StackPanel Grid.Column="0" Grid.Row="1">
            <Label FontWeight="Bold" Content="Nom de l'équipe ?"/>
            <TextBox TextChanged="NomChange" />
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="1" Margin="15">
            <Button Height="20" Width="50" Click="AjoutEquipe">Ajouter</Button>
        </StackPanel>
    </Grid>
</Window>
